<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.seeker.lucky.widget.CheckedTableView
        android:id="@+id/checkTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:tabTextArray="@array/demoTab"
        app:tabItemWidth="60dp"
        app:tabItemHeight="40dp"/>


    <com.seeker.lucky.widget.CheckedTableView
        android:id="@+id/checkTable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:tabTextArray="@array/demoTab"
        app:tabItemWidth="70dp"
        app:tabItemHeight="45dp"
        app:tabCheckedColor="@color/colorAccent"
        app:tabStrokeColor="@color/colorAccent"
        app:tabTextSize="18sp"/>

</LinearLayout>